 <!-- Custom Date Range Fields -->
 <div id="customDateRange" style="display: none;">
    <label for="startDate" class="form-label">Start Date:</label>
    <input type="date" name="startDate" id="startDate" class="form-control" style="width: 200px;">
    
    <label for="endDate" class="form-label mt-2">End Date:</label>
    <input type="date" name="endDate" id="endDate" class="form-control" style="width: 200px;">
</div>


<!-- Filter button -->
<div class="mt-3 mt-md-0">
    <button class="btn btn-primary" type="submit">Filter</button>
    <a id="download-pdf" href="/admin/salesreport/pdf?search=${search}&dateFilter=${dateFilter}&startDate=${startDate}&endDate=${endDate}" class="btn btn-info">Download PDF</a>  
    <a id="download-excel" href="/admin/salesreport/excel?search=${search}&dateFilter=${dateFilter}&startDate=${startDate}&endDate=${endDate}" class="btn btn-success">Download Excel</a>

</div>



