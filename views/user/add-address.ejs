    <div class="address">
      <h2>Add Address</h2>
      <form action="/profile/addAddress?from=checkout&cartId=<%= cartId %>" method="POST" id="add-address-form">
        <input type="hidden" name="from" value="<%= (from === 'checkout') ? 'checkout' : 'profile' %>">
