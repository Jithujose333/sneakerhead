    <link rel="stylesheet" href="/css/usersignup.css">
  
    <div class="container" id="container">
      <!-- Forgot Password Form -->
      <div class="form-container forgot-password-container">
        <form id="forgotPasswordForm" method="post" action="/forgetpassword-email-valid  "  style="  margin-left: 11rem;"> 
          <h1>Forgot Password?</h1>
          <span>Enter your email to reset your password</span>
  
          <input type="email" placeholder="Email" id="forgotEmail" name="email" />
          <span class="error-message" id="forgotEmailError"></span>
  
          <% if(locals.message && message.length > 0) { %>
            <div class="alert alert-danger text-center" style="color: red;">
              <%= message %>
            </div>
          <% } %>
  
          <button type="submit">Send Reset Link</button>
        </form>
      </div>
    </div>
  
    <div class="home-container">
      <button class="ghost" id="homeButton" onclick="goToHome()">Home</button>
    </div>
  
    <script>
        function goToHome() {
  window.location.href = '/'; // Replace '/' with the actual home page route if necessary
}



      const forgotPasswordForm = document.getElementById('forgotPasswordForm');
forgotPasswordForm.addEventListener('submit', (e) => {
  if (!validateForgotPasswordForm()) {
    e.preventDefault(); // Stop form submission if validation fails
  }
});

function validateForgotPasswordForm() {
  let isValid = true;
  const email = document.getElementById('forgotEmail').value.trim();

  if (email === "") {
    isValid = false;
    document.getElementById('forgotEmailError').textContent = "Email is required";
  } else if (!isValidEmail(email)) {
    isValid = false;
    document.getElementById('forgotEmailError').textContent = "Invalid email format";
  } else {
    document.getElementById('forgotEmailError').textContent = "";
  }

  return isValid;
}
  
      // Utility function to validate email format
      function isValidEmail(email) {
        const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
        return emailRegex.test(email);
      }
    </script>
  </div>
  